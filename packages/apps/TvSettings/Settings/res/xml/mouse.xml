<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" android:title="@string/system_mouse">
    <SwitchPreference
        android:persistent="true"
        android:title="@string/accessibility_toggle_large_pointer_icon_title"
        android:key="toggle_large_pointer_icon"/>
    <Preference
        android:persistent="true"
        android:title="@string/pointer_speed"
        android:key="pointer_speed"/>
    <SwitchPreference
        android:persistent="true"
        android:layout="@layout/hide"
        android:title="@string/mouse_touch_input_title"
        android:key="mouse_touch_input"
        android:summary="@string/mouse_touch_input_summary"/>
</PreferenceScreen>
